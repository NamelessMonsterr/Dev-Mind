# ======================
# CORE CONFIGURATION
# ======================

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Database
POSTGRES_DB=devmind
POSTGRES_USER=devmind
POSTGRES_PASSWORD=your_secure_password_here

# Paths
INDEX_PATH=./data/indices
JOB_STATE_PATH=./data/jobs

# Security - CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Monitoring
GRAFANA_PASSWORD=your_grafana_password_here

# ======================
# BACKEND CONFIGURATION
# ======================

# Vector Store
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Cache
REDIS_HOST=redis
REDIS_PORT=6379

# LLM Providers
OLLAMA_HOST=http://ollama:11434

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
API_KEY=your_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ======================
# FRONTEND CONFIGURATION
# ======================

NEXT_PUBLIC_API_URL=https://api.devmind.local
NEXT_PUBLIC_WS_URL=wss://api.devmind.local

# ======================
# TRAEFIK CONFIGURATION
# ======================

ACME_EMAIL=admin@devmind.local
DOMAIN=devmind.local

# ======================
# OPTIONAL FEATURES
# ======================

# Enable features
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true
ENABLE_JWT_AUTH=false

# Metrics
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
